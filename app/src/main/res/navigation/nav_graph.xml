<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dest_title">

    <fragment
        android:id="@+id/dest_title"
        android:name="com.reza.codelabs.TitleFragment"
        android:label="fragment_title"
        tools:layout="@layout/fragment_title">
        <action
            android:id="@+id/action_titleFragment_to_gameFragment"
            app:destination="@id/dest_game" />
    </fragment>

    <fragment
        android:id="@+id/dest_game"
        android:name="com.reza.codelabs.GameFragment"
        android:label="GameFragment"
        tools:layout="@layout/fragment_game">
        <action
            android:id="@+id/action_dest_game_to_gameWonFragment"
            app:destination="@id/gameWonFragment"
            app:popUpTo="@id/dest_game"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_dest_game_to_gameOverFragment"
            app:destination="@id/gameOverFragment"
            app:popUpTo="@id/dest_game"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/gameWonFragment"
        android:name="com.reza.codelabs.GameWonFragment"
        android:label="fragment_game_won"
        tools:layout="@layout/fragment_game_won">
        <action
            android:id="@+id/action_gameWonFragment_to_gameFragment"
            app:destination="@id/dest_game"
            app:popUpTo="@id/dest_title" />
    </fragment>

    <fragment
        android:id="@+id/gameOverFragment"
        android:name="com.reza.codelabs.GameOverFragment"
        android:label="fragment_game_over"
        tools:layout="@layout/fragment_game_over">
        <action
            android:id="@+id/action_gameOverFragment_to_gameFragment"
            app:destination="@id/dest_game"
            app:popUpTo="@id/dest_title" />
    </fragment>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.reza.codelabs.AboutFragment"
        android:label="About Trivia"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/rulesFragment"
        android:name="com.reza.codelabs.RulesFragment"
        android:label="Trivia Rules"
        tools:layout="@layout/fragment_rules" />
</navigation>
